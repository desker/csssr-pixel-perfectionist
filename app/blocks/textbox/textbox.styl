.textbox
	display block
	overflow hidden
	margin-top 6px

	&__label
		float left
		margin-right 18px
		margin-top 30px
		font-weight bold
		
	&__input
		display block
		overflow hidden
		
		input
			background transparent url('../images/underline.png') left bottom no-repeat
			display block
			width 100%
			font-family 'Courier New'
			font-size 30px
			color #231f20
			padding 12px 12px 8px
			border none
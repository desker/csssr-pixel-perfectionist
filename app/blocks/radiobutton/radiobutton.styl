.radiobutton
	cursor pointer
	margin-left 20px
	
	&__label
		display inline-block
		font-weight bold
		padding-left 32px
		height 26px
		padding-top 2px
		background url('../images/radio_empty.png') left no-repeat
		
	input
		display none
		
		&:checked + .radiobutton__label
			background-image url('../images/radio_full.png')

@media (max-width: 750px)
	.radiobutton
		margin 10px 20px 0 0
		display block
		&__label
			font-size 16px
			padding-top 4px